@using Equipment.Models
@model List<TrackServiceHistory>


@if (Model.Count == 0)
{
    <div>Нет останов!!!</div>
}

else
{
    <table>
        <tr>
            <th>Дата останова</th>
            <th>Причина останова</th>
            <th>Описание проблемы</th>
        </tr>
        @foreach (TrackServiceHistory item in Model)
        {
        <tr>
            <td>@Ajax.ActionLink(@item.dRepairDate.ToString(),"GetServiceDetail","Equipment",new { id = item.intServiceHistoryId},new AjaxOptions { UpdateTargetId = "res"+item.intServiceHistoryId, HttpMethod = "Post"})</td>
            <td>@item.TablesStopReason.strReason</td>
            <td>@item.strDescriptionProblem</td>
        </tr>
        <tr id=@("res"+item.intServiceHistoryId)></tr>
        }
    </table>
 }


