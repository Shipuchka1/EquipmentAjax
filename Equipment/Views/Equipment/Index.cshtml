@model IEnumerable<Equipment.Models.newEquipment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div id="res"></div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table action="@Url.Action("EquipmentDetails")" class="table" id="equipmentTable">
    <tr>
        <th>Id</th>
        <th>Изображение</th>
        <th>Наименование</th>
        <th>Гаражный номер</th>
        <th>Производитель</th>
        <th>Год выпуска</th>
        <th>Серийный номер</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr data-id="@item.intEquipmentID" data-cl="false">
            <td>
                @Html.DisplayFor(modelItem => item.intEquipmentID)
            </td>
            <td>
                <img width="50" height="50" src=@Url.Content("~/Content/pic/"+item.TablesModel.strImage) />
                @Html.DisplayFor(modelItem => item.TablesModel.strImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TablesModel.strName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.intGarageRoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TablesManufacturer.strName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strManufYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strSerialNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.intEquipmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.intEquipmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.intEquipmentID })
            </td>
        </tr>

    }
</table>


@section scripts
{
    <script src="~/Scripts/equipment.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script>
    google.charts.load('current', { 'packages': ['corechart'] });
    </script>
}
